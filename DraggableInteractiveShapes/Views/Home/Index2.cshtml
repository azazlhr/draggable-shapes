<!DOCTYPE html>
<html>
<head>
    <title>SignalR MoveShape Demo</title>
    <style>
        div {
            width: 100px;
            height: 100px;
            background-color: #FF0000;
            display: inline-block;
            position: absolute;
        }
    </style>
</head>
<body>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script>
        $(function () {
            var moveShapeHub = $.connection.moveShapeHub,
                // Send a maximum of 10 messages per second
                // (mouse movements trigger a lot of messages)
                messageFrequency = 10,
                // Determine how often to send messages in
                // time to abide by the messageFrequency
                updateRate = 1000 / messageFrequency,
                shapeModel = {
                    id: '',
                    left: 0,
                    top: 0
                },
                moved = false;
            moveShapeHub.client.updateShape = function (model) {

                $("#" + model.Id).css({ left: model.Left, top: model.Top });
            };
            $.connection.hub.start().done(function () {
                $(".shape").draggable({
                    drag: function () {

                        shapeModel = $(this).offset();
                        shapeModel.id = this.id;
                        moved = true;
                    },
                    stop: function () {
                        shapeModel = $(this).offset();
                        shapeModel.id = this.id;
                        moveShapeHub.server.updateModel(shapeModel);
                    }
                });
                // Start the client side server update interval
                setInterval(updateServerModel, updateRate);

                moveShapeHub.server.firstHandShake();
            });
            function updateServerModel() {
                // Only update server if we have a new movement
                if (moved) {
                    moveShapeHub.server.updateModel(shapeModel);
                    moved = false;
                }
            }
        });
    </script>

    <div class="shape" id="1">first</div>
    <div class="shape" id="2">second</div>
    <div class="shape" id="3">third</div>
</body>
</html>